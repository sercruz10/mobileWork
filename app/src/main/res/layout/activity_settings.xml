<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/contact_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="5dp"
        android:text="Personal Info"
        android:textColor="#000"
        android:textSize="20sp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/txtNameInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="10sp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/lblDateBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PickDate" />

    <EditText
        android:id="@+id/txtAdressPersonal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Address"
        android:inputType="text"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/txtPhonePersonal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnConfigSOS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10sp"/>

    <Button
        android:id="@+id/btnConfigWH"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10sp"/>

    <Button
        android:id="@+id/btnConfigBest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10sp"/>


    <Button
        android:id="@+id/btnSubmitPersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Submit"
        android:textSize="10sp"
        android:textColor="#fff" />
</LinearLayout>